<div class="signup-form">
  <div class="signup-header">
    <h2>Sign up</h2>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.email_field :email, placeholder: 'email', class: 'form-control form-input' %>
  </div>

  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, placeholder: 'password', class: 'form-control form-input' %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, placeholder: 'password confirmation', class: 'form-control form-input' %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: 'submit-button' %>
  </div><br />
<% end %>

  <%= render "users/shared/links" %>
</div>