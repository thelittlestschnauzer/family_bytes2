<div class="login-form">
  <div class="login-header">
    <h2>Log in</h2>
  </div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group">
    <%= f.email_field :email, placeholder: 'email', class: 'form-control form-input' %>
  </div><br />

  <div class="form-group">
    <%= f.password_field :password, placeholder: 'password', class: 'form-control form-input' %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="form-group">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: 'form-input' %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: 'submit-button' %>
  </div><br />
<% end %>
<%= render "users/shared/links" %>

</div>
